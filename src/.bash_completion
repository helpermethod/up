_complete_basename() {
	local basename_to_complete=${COMP_WORDS[COMP_CWORD]}

	if [[ $basename_to_complete == -* ]]; then
		_append_gnu_standard_options

		return
	fi

	[[ $PWD == '/' ]] && return 0

	[[ -z $basename_to_complete ]] && COMPREPLY+=('/')

	while read -d '/'; do
		[[ $REPLY == $basename_to_complete* ]] && COMPREPLY+=("${REPLY}/")
	done <<< "${PWD:1}"
}

complete -F _complete_basename up
