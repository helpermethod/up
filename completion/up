_complete_up() {
	local current_word=${COMP_WORDS[COMP_CWORD]}

	if [[ $current_word == -* ]]; then
		_complete_gnu_standard_options

		return
	fi

	[[ $PWD == '/' ]] && return

	[[ -z $currrent_word ]] && COMPREPLY+=('/')

	while read -d '/'; do
		[[ $REPLY == $current_word* ]] && COMPREPLY+=("${REPLY}/")
	done <<< "${PWD:1}"
}

complete -F _complete_up up
